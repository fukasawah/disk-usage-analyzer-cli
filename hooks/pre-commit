#!/bin/bash
# Pre-commit hook for Rust projects
# Runs formatting check and linting before commit

set -e

echo "🔍 Running pre-commit checks..."

# Check formatting
echo "📝 Formatting code..."
if ! cargo fmt; then
    echo "❌ Code formatting failed!"
    echo "💡 Fix the issues above and re-run the commit"
    exit 1
fi

# Ensure no formatting changes remain unstaged
if ! git diff --exit-code; then
    echo "ℹ️  Formatting changes were applied. Please review and stage them."
    exit 1
fi

# Run clippy (with same rules as CI)
echo "🔎 Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings -D clippy::implicit-clone; then
    echo "❌ Clippy check failed!"
    echo "💡 Fix the warnings above before committing"
    exit 1
fi

echo "✅ All pre-commit checks passed!"
