#!/bin/bash
# Pre-commit hook for Rust projects
# Runs formatting check and linting before commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Formatting code..."
if ! cargo fmt; then
    echo "âŒ Code formatting failed!"
    echo "ğŸ’¡ Fix the issues above and re-run the commit"
    exit 1
fi

# Ensure no formatting changes remain unstaged
if ! git diff --exit-code; then
    echo "â„¹ï¸  Formatting changes were applied. Please review and stage them."
    exit 1
fi

# Run clippy (with same rules as CI)
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings -D clippy::implicit-clone; then
    echo "âŒ Clippy check failed!"
    echo "ğŸ’¡ Fix the warnings above before committing"
    exit 1
fi

# Ensure Windows GNU target still builds
echo "ğŸ§ª Checking Windows GNU target build..."
if ! command -v x86_64-w64-mingw32-gcc >/dev/null 2>&1; then
    echo "âŒ Missing MinGW toolchain (x86_64-w64-mingw32-gcc)."
    echo "ğŸ’¡ Install it via 'sudo apt-get install -y mingw-w64' (or the equivalent for your platform)."
    exit 1
fi

if ! cargo check --target x86_64-pc-windows-gnu; then
    echo "âŒ Windows (gnu) cargo check failed!"
    echo "ğŸ’¡ Install the target with 'rustup target add x86_64-pc-windows-gnu' if missing and fix build errors."
    exit 1
fi

if ! cargo build --target x86_64-pc-windows-gnu; then
    echo "âŒ Windows (gnu) cargo build failed!"
    echo "ğŸ’¡ Ensure the MinGW toolchain is installed and address the compiler errors above."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
