#!/bin/bash
# Pre-commit hook for Rust projects
# Runs formatting check and linting before commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Formatting code..."
if ! cargo fmt; then
    echo "âŒ Code formatting failed!"
    echo "ğŸ’¡ Fix the issues above and re-run the commit"
    exit 1
fi

# Ensure no formatting changes remain unstaged
if ! git diff --exit-code; then
    echo "â„¹ï¸  Formatting changes were applied. Please review and stage them."
    exit 1
fi

# Run clippy (with same rules as CI)
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings -D clippy::implicit-clone; then
    echo "âŒ Clippy check failed!"
    echo "ğŸ’¡ Fix the warnings above before committing"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
